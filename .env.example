# Database Configuration
DATABASE_URL=sqlite:///./data/pydigestor.db

# LLM Provider (Phase 2 - Leave commented for Phase 1)
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# TRIAGE_MODEL=claude-3-haiku-20240307
# EXTRACT_MODEL=claude-3-5-sonnet-20241022

# Feature Flags (Phase 1 - disable LLM features)
ENABLE_TRIAGE=false
ENABLE_EXTRACTION=false

# Feed Sources (Start small for Phase 1)
RSS_FEEDS=["https://krebsonsecurity.com/feed/"]
REDDIT_SUBREDDITS=["netsec"]

# Reddit Configuration
REDDIT_SORT=new
REDDIT_LIMIT=100
REDDIT_MAX_AGE_HOURS=24
REDDIT_MIN_SCORE=0
REDDIT_PRIORITY_HOURS=6
REDDIT_MIN_COMMENTS=0

# Reddit Domain Filtering
REDDIT_BLOCKED_DOMAINS=["youtube.com","youtu.be","twitter.com","x.com","reddit.com","tiktok.com","instagram.com"]

# Summarization (Local only - Phase 1)
AUTO_SUMMARIZE=true
SUMMARIZATION_METHOD=lexrank
SUMMARY_MIN_CONTENT_LENGTH=200
SUMMARY_MIN_SENTENCES=3
SUMMARY_MAX_SENTENCES=8
SUMMARY_COMPRESSION_RATIO=0.20

# Content Extraction
CONTENT_FETCH_TIMEOUT=15
CONTENT_MAX_RETRIES=2
ENABLE_PATTERN_EXTRACTION=true

# Application Settings
LOG_LEVEL=INFO
ENABLE_DEBUG=false
